<div class="local_honey btn-group">
  <a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">
    <%= current_flag %>
    <span class="caret"></span>
  </a>

  <ul class="dropdown-menu">
    <li title="<%= t('locales.portuguese') %>">
      <%= link_to locale_path('pt-BR'), class: 'pt-br-locale', method: :put do %>
        <%= image_tag('local_honey/flag-pt-BR.png') %>
        <%= t('locales.portuguese') %>
      <% end %>
    </li>
    <li title="<%= t('locales.english') %>">
      <%= link_to locale_path('en'), class: 'en-locale', method: :put do %>
        <%= image_tag('local_honey/flag-en.png') %>
        <%= t('locales.english') %>
      <% end %>
    </li>
  </ul>
</div>